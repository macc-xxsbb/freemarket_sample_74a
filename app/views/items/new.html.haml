.title
  = link_to image_tag("logo.png", height: '49', width: '185', class: 'logo'), "/"
.content
  .content-main
    = form_with url: items_path, method: "POST", local: true do |f|
      .image-product
        %label.label-edit 出品画像
        %sapn.required 必須
        %p 最大１０枚までアップロードできます。
        .name__image
          .name__image__set
            .name__image__set__file.item-num-0
              = f.fields_for @item do |item|
                = item.fields_for :item_images do |item_image|
                  #image-box__container
                    = item_image.file_field :image, type: 'file', name: "item[item_images_attributes][0][image]", value:"", style: "display:none", id:"img-file0", class:"js-file"
                    #image-box__container__var
                      %label{for: "img-file0"}
                        %i.fas.fa-camera
            %p
              ドラッグアンドドロップ
              %br
              またはクリックしてファイルをアップロード
        .image__message
      .item-explain
        %label.label-edit 商品名
        %sapn.required 必須
        .item-explain__text
          = f.fields_for @item do |item|
            = item.text_field :item_name, class: "item-explain__text__form", placeholder: "40文字まで"
          %p 
            入力してください
          %label.label-edit 商品の説明
          %sapn.required 必須
          .item-explain__text__textarea
            = f.fields_for @item do |item|
              = item.text_area :content, placeholder: "商品の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありませ\nん。あわせやすいのでおすすめです。"
          %p
            入力してください
            .product_select-details
              .product_select-group
                .product_header
                  カテゴリー
                .product_require
                  必須
              .product_category-select
                = f.collection_select :category, @category, :id, :title, { prompt: "選択してください" }, { class: "category_select-box", id: "category_select" }
                %i.fa.fa-chevron-down
              .product_select-children
          -# .item-show
          -#   %p
          -#     商品の詳細
          -#   .item-show__category
          -#     %label.label-edit  カテゴリー
          -#     %sapn.required 必須
          -#     = f.fields_for @item do |item|
          -#       = item.select :category_id, Category.all.map { |category| [category.title, category.id] }, { selected: 14 } 
          -#     .choice
          -#       選択してください
      .item-show__list
        %label.label-edit  ブランド
        %sapn.item-show__list__any 任意
        = f.fields_for @brand do |brand|
          = brand.text_field :brand, placeholder: "例） シャネル"
        .choice
          選択してください
      .item-show__list
        %label.label-edit 商品の状態
        %sapn.required 必須
        = f.fields_for @item do |item|
          = item.collection_select :status_id, Status.all, :id, :name, prompt: "選択してください", class: 'input'
        .choice
          選択してください
      .delivery
        %p 
          配送について
        .delivery__list
          %label.label-edit  配送料の負担
          %sapn.required 必須
          = f.fields_for @shipping do |shipping|
            = shipping.select :ship_base, { "選択してください": 1, "送料込み（出品者負担）": 2, "着払い（購入者負担）": 3 }
            .choice
              選択してください
            .delivery__list
              = shipping.label :発送元の地域, {class: 'label-edit'}
              = shipping.label :必須, {class: 'required'}
              .delivery__list__prefecture
                = shipping.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "選択してください", class: 'input'
            .choice
              選択してください
            .delivery__list
              %label.label-edit  発送までの日数
              %sapn.required 必須
              = shipping.select :ship_date_id, { "選択してください": 1, "1日〜2日で発送": 2, "2日〜3日で発送": 3, "4日〜7日で発送": 4 }
              .choice
                選択してください
      .item-price
        %p
          価格（¥300〜9,999,999)
        .item-price__content
          .item-price__status
            %label.label-edit 商品の状態
            %sapn.required 必須
          .item-price__bye
            %span ¥
            = f.fields_for @item do |item|
              = item.text_field :price, placeholder: "0"
        %p.form-error
          300以上9999999以下で入力してください
      .size-area
        .item-size
          %p
            サイズ(S~L等)
          .item-size__content
            .item-size__status
              %sapn.required 必須
            .item-size__bye
              %span 
              = f.fields_for @item do |item|
                = item.text_field :size, placeholder: "S~L等"
        .fee
          .fee__price
            販売手数料 (10%)
          .fee__content
            %span ー
        .profit
          .profit__price
            販売利益
          .profit__content
            %span ー
      .exhibilion
        .exhibilion__button
          = f.submit "出品する", class: 'exhibilionbutton'
          %button{type: "submit", class: 'exhibilion__save'} 下書きに保存
        %a.top__return 
          もどる
        %p.warning
          禁止されている
          %a 行為 および
          %a 出品物
          を必ずご確認ください。偽ブランド品や盗品物などの販売は犯罪であり、法律に
          より処罰される可能性があります。 また、出品をもちまして加盟店規約に同意したことになります。
  .product__footer
    .product__footer__link
      = link_to 'プライバシーポリシー', '/', class: 'footer-link'
      = link_to 'フリマ利用規約', '/', class: 'footer-link'
      = link_to '特定商取引に関する表記', '/', class: 'footer-link'
    .product__footer__logo
      = image_tag 'logo-white.png', height: '49', width: '185'
    %p.logo__tag
      © FURIMA, Inc.