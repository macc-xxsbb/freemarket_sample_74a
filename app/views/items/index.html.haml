.main__five
  .main__five__one
    %h2.head
      ピックアップカテゴリー

    .product__box
      .product__head
        %h3.title__one
          = link_to "新規投稿商品", "#"
      .product__lists
        .product__list
          - @newItems.each do |item|
            = link_to item_path(item), class: "list__image" do
              %figure.item__images
                = image_tag item.item_images[0].image.url, alt: "image_url",size: "200x150"
              .product__list__body
                %h3.name
                  = item.item_name
                .details
                  %ul
                    %li
                      = item.price
                      円
                  %p
                    (税込)
        
